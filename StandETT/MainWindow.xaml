                                       VerticalAlignment="Center" />
                        </Grid>

                        <TextBlock Margin="0,5,0,5" TextWrapping="Wrap"
                                   Text="{Binding ErrorOutput,NotifyOnSourceUpdated=True}" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                        </TextBlock>
                    </StackPanel>

                    <DockPanel Margin="0,0,10,10" LastChildFill="False" Grid.Row="1" HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                        <Button MinHeight="20" MinWidth="80" Command="{Binding CloseActionWindowCmd}"
                                IsEnabled="{Binding CloseActionWindowBtnEnabled}">
                            Ок
                        </Button>
                    </DockPanel>

                </Grid>

            </TabItem>

        </TabControl>
        <!--/Перелючатель окон табконтрол-->

        <!--///-->

        <!--Нижняя панель управления и статусов грид-->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>

                </Grid.ColumnDefinitions>

                <!--//-->

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <ProgressBar Grid.Row="0" Value="{Binding PercentCurrentTest, Mode=OneWay}" Maximum="100"
                                 MinWidth="150"
                                 MinHeight="20" Width="165" HorizontalAlignment="Center" VerticalAlignment="Center"
                                 Foreground="{Binding ProgressColor}" />
                    <TextBlock Grid.Row="0"
                               Text="{Binding StringFormat={}{0}%,Path=PercentCurrentTest, UpdateSourceTrigger=Explicit}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />

                    <ProgressBar Grid.Row="1" Value="{Binding PercentCurrentSubTest, Mode=OneWay}" Maximum="100"
                                 MinWidth="150"
                                 MinHeight="20" Width="165" HorizontalAlignment="Center" VerticalAlignment="Center"
                                 Foreground="{Binding ProgressSubColor}" />
                    <TextBlock Grid.Row="1"
                               Text="{Binding StringFormat={}{0}%,Path=PercentCurrentSubTest, UpdateSourceTrigger=Explicit}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Grid>

                <!--//-->

                <StackPanel Grid.Column="1" HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <DockPanel>
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center" Text="{Binding TextCurrentTest}" />
                        <TextBlock Grid.Column="1" HorizontalAlignment="Center"
                                   VerticalAlignment="Center" Text="{Binding SubTestText}" />
                    </DockPanel>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center" Text="{Binding TestCurrentDevice}" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center" Text="{Binding CurrentCountChecked}" />
                </StackPanel>

                <!--//-->

                <DockPanel LastChildFill="False" Grid.Column="2">

                    <Button DockPanel.Dock="Right" MinHeight="10" MinWidth="80" Margin="10,20"
                            Command="{Binding NextCmd}" Content="Далее" IsEnabled="{Binding NextBtnEnabled}" />
                    <Button DockPanel.Dock="Right" MinHeight="10" MinWidth="80" Margin="10,20"
                            Command="{Binding CancelAllTestCmd}" Content="Остановить"
                            IsEnabled="{Binding CancelAllTestBtnEnabled}" />
                    <Button DockPanel.Dock="Right" MinHeight="10" MinWidth="110" Margin="10,20"
                            Command="{Binding StartTestDevicesCmd}" IsEnabled="{Binding StartTestDevicesBtnEnabled}">
                        <Button.Content>
                            <TextBlock TextAlignment="Center"> Начать/повторить <LineBreak /> тест </TextBlock>
                        </Button.Content>
                    </Button>

                    <Button DockPanel.Dock="Right" MinHeight="10" MinWidth="80" Margin="10,20"
                            Command="{Binding DeviceConfigCmd}" IsEnabled="{Binding DeviceConfigBtnEnabled}">
                        <Button.Content>
                            <TextBlock TextAlignment="Center" Text="{Binding BackButtonText}" />
                        </Button.Content>
                    </Button>
                </DockPanel>

                <!--//-->

            </Grid>

        </Grid>
        <!--/Нижняя панель управления и статусов грид-->

        <!--///-->

    </Grid>
    <!--/Главный грид-->

    <!--////-->

</Window>