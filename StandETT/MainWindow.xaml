<Window x:Class="StandETT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StandETT"
        mc:Ignorable="d"
        Title="Стенд ЕТТ" MinHeight="760" MinWidth="1200" Height="768" Width="1000"
        IsEnabled="{Binding WindowDisabled}"
        Closing="MainWindow_Closing">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>

    <!--Стили-->
    <Window.Resources>

        <!--///-->

        <Style x:Key="GridSetCmdLib" TargetType="Grid">
            <Style.Resources>
                <Style TargetType="Button">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="MinHeight" Value="20" />
                    <Setter Property="MinWidth" Value="20" />
                </Style>
                <Style TargetType="StackPanel">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Style.Resources>
                        <Style TargetType="TextBox">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="MinWidth" Value="140"></Setter>
                            <Setter Property="MinHeight" Value="20"></Setter>
                        </Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="MinWidth" Value="140"></Setter>
                            <Setter Property="MinHeight" Value="22"></Setter>
                        </Style>

                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="0,0,0,4"></Setter>

                        </Style>

                    </Style.Resources>
                </Style>
            </Style.Resources>
        </Style>

        <!--///-->

        <Style x:Key="GridSettingsTypeVip" TargetType="Grid">
            <Style.Resources>

                <Style TargetType="StackPanel">
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Style.Resources>
                    </Style.Resources>
                </Style>

                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="10, 5,0,0" />
                    <Setter Property="MinWidth" Value="100" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                </Style>

                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="10, 5,10,0" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="MinWidth" Value="100" />
                    <Setter Property="MinHeight" Value="20" />

                </Style>

                <Style TargetType="ComboBox">
                    <Setter Property="Margin" Value="10, 5,10,0" />
                    <Setter Property="MinWidth" Value="100" />
                    <Setter Property="Height" Value="22" />
                    <Setter Property="SelectedIndex" Value="0" />
                </Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Margin" Value="10, 5,0,0" />
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="10, 5,10,0" />
                    <Setter Property="MinHeight" Value="20" />
                </Style>
            </Style.Resources>
        </Style>

        <!--///-->

        <Style x:Key="GridSettingsTypeVipDevices" TargetType="Grid" BasedOn="{StaticResource GridSettingsTypeVip}">
            <Style.Resources>
                <Style TargetType="StackPanel">
                    <Style.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="10, 5,0,0" />
                            <Setter Property="MinWidth" Value="50" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                        </Style>

                        <Style TargetType="TextBox">
                            <Setter Property="Margin" Value="10, 5,10,0" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="MinWidth" Value="50" />
                        </Style>
                    </Style.Resources>
                </Style>
            </Style.Resources>
        </Style>

        <!--///-->

        <Style x:Key="TextBoxStyle"
               TargetType="{x:Type TextBox}">
            <Setter Property="Margin"
                    Value="10,5,10,0" />
            <Setter Property="MinWidth"
                    Value="100" />
            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="BorderBrush"
                    Value="Green" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="LightGray" />
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="Gray" />
                                <Setter Property="Foreground"
                                        Value="Gray" />
                            </Trigger>
                            <Trigger Property="IsReadOnly"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="WhiteSmoke" />
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="Gray" />
                                <Setter Property="Foreground"
                                        Value="DarkGray" />
                            </Trigger>
                            <Trigger Property="Validation.HasError"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="Red" />
                                <Setter Property="ToolTip"
                                        Value="{Binding RelativeSource={RelativeSource Self}, 
                                    Path=(Validation.Errors)[0].ErrorContent}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ValidationFailed">
            <StackPanel Orientation="Horizontal">
                <Border BorderBrush="Violet" BorderThickness="2">
                    <AdornedElementPlaceholder />
                </Border>
                <TextBlock Foreground="Red" FontSize="26" FontWeight="Bold">!</TextBlock>
            </StackPanel>
        </ControlTemplate>

        <!--///-->

    </Window.Resources>
    <!--/Стили-->

    <!--////-->

    <!--Главный грид-->
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.18*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--///-->

        <!--Перелючатель окон табконтрол-->
        <TabControl SelectedIndex="{Binding SelectTab}">


            <!--Подключение устройств таб-->
            <TabItem IsEnabled="{Binding PrimaryCheckDevicesTab}" Header="Подключение устройств">


                <Grid Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="28*" />
                        <ColumnDefinition Width="569*" />
                    </Grid.ColumnDefinitions>

                    <!--Устройства грид-->

                    <ItemsControl Grid.Row="0" ItemsSource="{Binding Devices}" Grid.IsSharedSizeScope="True"
                                  Grid.ColumnSpan="2">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid ShowGridLines="True" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <d:Style.DataContext>
                                    <x:Type Type="local:BaseDevice" />
                                </d:Style.DataContext>
                                <Setter Property="Grid.Row" Value="{Binding RowIndex}" />
                                <Setter Property="Grid.Column" Value="{Binding ColumnIndex}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,5,0,0" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Grid>
                                        <Rectangle Margin="5" MinHeight="30" MinWidth="30"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" Fill="{Binding StatusColor}" />
                                        <TextBlock
                                            Text="Стат" HorizontalAlignment="Center" VerticalAlignment="Center"
                                            FontSize="12" />
                                    </Grid>
                                    <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextWrapping="Wrap" Text="{Binding IsDeviceType}" />
                                    <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextWrapping="Wrap" Foreground="{Binding StatusColor}"
                                               Text="{Binding ErrorStatus, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="1" Margin="1138,0,0,0" />

                    <!--/Устройства грид-->
                </Grid>


            </TabItem>
            <!--/Подключение устройств таб-->

            <!--//-->

            <!--Подключение ВИПЫ таб-->
            <TabItem IsEnabled="{Binding PrimaryCheckVipsTab}" Header="Подключние ВИПов">

                <Grid ShowGridLines="True" Style="{StaticResource GridSettingsTypeVipDevices}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Grid.ColumnSpan="3" MinWidth="300" VerticalAlignment="Center"
                          HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <DockPanel>
                            <ComboBox Margin="7" DockPanel.Dock="Left" MinHeight="10" MinWidth="200"
                                      HorizontalAlignment="Stretch" ItemsSource="{Binding TypeVips}"
                                      SelectedItem="{Binding SelectTypeVip, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedIndex="{Binding SelectTypeVipIndex}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock Grid.ColumnSpan="2" Text="{Binding Name}" />
                                        </Grid>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBlock Margin="10" DockPanel.Dock="Left">Выбор типа Випа</TextBlock>
                            <TextBox Margin="10" Width="200" Text="{Binding ReportNum}"></TextBox>
                            <TextBlock Margin="10" DockPanel.Dock="Left">Номер отчета Випов</TextBlock>
                        </DockPanel>
                    </Grid>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Vips}" Grid.IsSharedSizeScope="True">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid ShowGridLines="True">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>

                                </Grid>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <d:Style.DataContext>
                                    <x:Type Type="local:Vip" />
                                </d:Style.DataContext>
                                <Setter Property="Grid.Row" Value="{Binding RowIndex}" />
                                <Setter Property="Grid.Column" Value="{Binding ColumnIndex}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment=" Center" VerticalAlignment="Center">
                                    <Grid Margin="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Rectangle Grid.Column="0" Margin="10" MinHeight="30" MinWidth="30"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" DataContext="{Binding Path=Relay}"
                                                   Fill="{Binding StatusColor}" />
                                        <TextBlock Grid.Column="0" Margin="10" HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" Text="Стат" FontSize="12" />

                                        <Rectangle Grid.Column="1" Margin="10" DockPanel.Dock="Left" MinHeight="25"
                                                   MinWidth="25"
                                                   Fill="{Binding StatusColor}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   RenderTransformOrigin="0.5,0.5">
                                            <Rectangle.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform />
                                                    <SkewTransform />
                                                    <RotateTransform Angle="45" />
                                                    <TranslateTransform />
                                                </TransformGroup>
                                            </Rectangle.RenderTransform>
                                        </Rectangle>
                                        <TextBlock Grid.Column="1" Margin="10" HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" Text="Тест" FontSize="12" />
                                    </Grid>

                                    <TextBlock Margin="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               Text="{Binding IsDeviceType, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Margin="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextWrapping="Wrap" DataContext="{Binding Path=Relay}"
                                               Text="{Binding ErrorStatus, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox DockPanel.Dock="Left" Margin="2" MinWidth="200"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

            </TabItem>
            <!--/Подключение ВИПЫ таб-->

            <!--//-->

            <!--/Испытания таб-->
            <TabItem IsEnabled="{Binding CheckVipsTab}" Header="Тесты">

                <Grid ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Row="0" Grid.ColumnSpan="3" MinWidth="300" VerticalAlignment="Center"
                               HorizontalAlignment="Stretch">
                    </DockPanel>

                    <Grid Margin="0" ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>

                        </Grid.ColumnDefinitions>

                        <ItemsControl Grid.Row="0" ItemsSource="{Binding Devices}" Grid.IsSharedSizeScope="True">

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Grid ShowGridLines="True" VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemContainerStyle>
                                <Style>
                                    <d:Style.DataContext>
                                        <x:Type Type="local:BaseDevice" />
                                    </d:Style.DataContext>
                                    <Setter Property="Grid.Row" Value="{Binding RowIndex}" />
                                    <Setter Property="Grid.Column" Value="{Binding ColumnIndex}" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <Grid ShowGridLines="True" HorizontalAlignment="Center"
                                              VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Ellipse Grid.Column="0" MinHeight="20" MinWidth="20"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                     Fill="{Binding OnOffColor}"
                                                     Visibility="{Binding IsHiddenOutputOnOff}" Margin="10,0" />
                                            <TextBlock Grid.Column="0" Visibility="{Binding IsHiddenOutputOnOff}"
                                                       Text="Вкл" HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" FontSize="10" />
                                            <Rectangle Grid.Column="1" MinHeight="20" MinWidth="20"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Fill="{Binding StatusColor}" Margin="10,0" />
                                            <TextBlock Grid.Column="1"
                                                       Text="Стат" HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" FontSize="10" />
                                        </Grid>

                                        <TextBlock Grid.Row="1" Margin="5" HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap" Text="{Binding IsDeviceType}" FontSize="10" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel Margin="10" Grid.Column="1" VerticalAlignment="Center"
                                    HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Left"
                                       Text="{Binding TimeTestStart, UpdateSourceTrigger=PropertyChanged, StringFormat=Начало испытаний: {0}}" />
                            <TextBlock HorizontalAlignment="Left"
                                       Text="{Binding TimeObservableTestNext, UpdateSourceTrigger=PropertyChanged, StringFormat=Контролирущий замер через: {0}}" />
                            <TextBlock HorizontalAlignment="Left"
                                       Text="{Binding TimeControlTestNext, UpdateSourceTrigger=PropertyChanged, StringFormat=Контрольный замер через: {0}}" />
                            <TextBlock HorizontalAlignment="Left"
                                       Text="{Binding TimeTestStop, UpdateSourceTrigger=PropertyChanged, StringFormat=До конца испытаний: {0}}" />
                        </StackPanel>

                    </Grid>

                    <ItemsControl Margin="0" Grid.Row="1"
                                  ItemsSource="{Binding Vips}" Grid.IsSharedSizeScope="True">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid Margin="0" ShowGridLines="True">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />

                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <d:Style.DataContext>
                                    <x:Type Type="local:Vip" />
                                </d:Style.DataContext>
                                <Setter Property="Grid.Row" Value="{Binding RowIndex}" />
                                <Setter Property="Grid.Column" Value="{Binding ColumnIndex}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Grid.Row="1" Grid.Column="0" Margin="0" HorizontalAlignment="Center"
                                      VerticalAlignment="Stretch">
                                    <Grid Margin="0" ShowGridLines="True" VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.4*"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="1.5*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Rectangle Grid.Column="0" DockPanel.Dock="Right" MinHeight="30"
                                                       MinWidth="30" HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Fill="{Binding Relay.StatusColor}" Margin="10,0" />
                                            <TextBlock Grid.Column="0"
                                                       Text="Стат" HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />

                                            <Ellipse Grid.Column="1" Margin="10" DockPanel.Dock="Left" MinHeight="25"
                                                     MinWidth="25"
                                                     Fill="{Binding Relay.OnOffColor}"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="1"
                                                       Text="Вкл" HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />

                                            <Rectangle Grid.Column="2" Margin="10" DockPanel.Dock="Left" MinHeight="25"
                                                       MinWidth="25"
                                                       Fill="{Binding StatusColor}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       RenderTransformOrigin="0.5,0.5">
                                                <Rectangle.RenderTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform />
                                                        <SkewTransform />
                                                        <RotateTransform Angle="45" />
                                                        <TranslateTransform />
                                                    </TransformGroup>
                                                </Rectangle.RenderTransform>
                                            </Rectangle>
                                            <TextBlock Grid.Column="2"
                                                       Text="Тест" HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />

                                            <Grid Grid.Column="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>

                                                <Rectangle Grid.Column="0" MinHeight="30" MinWidth="30"
                                                           VerticalAlignment="Center"
                                                           Fill="{Binding StatusColorChannelV1}" />
                                                <TextBlock Grid.Column="0" Text="КнV1" HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />

                                                <Rectangle Grid.Column="1" MinHeight="30" MinWidth="30"
                                                           VerticalAlignment="Center"
                                                           Fill="{Binding StatusColorChannelV2}" Margin="2,0,0,0" />
                                                <TextBlock Grid.Column="1" Text="КнV2" HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" Margin="2,0,0,0" />

                                                <Rectangle Grid.Column="2" MinHeight="30" MinWidth="30"
                                                           VerticalAlignment="Center"
                                                           Fill="{Binding StatusColorChannelA}" Margin="2,0,0,0" />
                                                <TextBlock Grid.Column="2" Text="КнA" HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" Margin="2,0,0,0" />
                                            </Grid>
                                        </Grid>

                                        <DockPanel MinWidth="280" Grid.Row="1" HorizontalAlignment="Stretch"
                                                   VerticalAlignment="Stretch">
                                            <TextBlock DockPanel.Dock="Top"
                                                       Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, StringFormat=Имя: \{0\}}" />
                                            <TextBlock DockPanel.Dock="Top"
                                                       Text="{Binding Temperature,UpdateSourceTrigger=PropertyChanged, StringFormat=Температура: \{0\} ℃}" />
                                            <TextBlock DockPanel.Dock="Top">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}Uₒᵤₜ₁: {0} V {1}">
                                                        <Binding Path="VoltageOut1" />
                                                        <Binding Path="Channel1Revers" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock DockPanel.Dock="Top">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}Uₒᵤₜ₂: {0} V {1}">
                                                        <Binding Path="VoltageOut2" />
                                                        <Binding Path="Channel2Revers" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock DockPanel.Dock="Top">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}Iᵢₙ: {0} A {1}">
                                                        <Binding Path="CurrentIn" />
                                                        <Binding Path="ChannelARevers" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock DockPanel.Dock="Top"
                                                       TextWrapping="WrapWithOverflow"
                                                       Text="{Binding ErrorStatusVip, StringFormat=Статус: \{0\}}"
                                                       Foreground="{Binding StatusColor}" />
                                        </DockPanel>

                                    </Grid>
                                </Grid>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </Grid>


            </TabItem>
            <!--/Испытания таб-->

            <!--//-->

            <!--Настройки устройств таб-->
            <TabItem Header="Настройка устройств">

                <!--Настройки и команды Grid-->
                <Grid Style="{StaticResource GridSettingsTypeVip}" ShowGridLines="True" Background="#FFE5E5E5">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="180" Width="0.25*" />
                        <ColumnDefinition Width="3" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.4*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3"
                                  HorizontalAlignment="Center" VerticalAlignment="Stretch" />

                    <Grid ShowGridLines="True" Grid.Column="0" VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.15*" />
                            <RowDefinition />
                            <RowDefinition Height="0.30*" />
                        </Grid.RowDefinitions>

                        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                            <TextBlock>Выбор внешнего устройства</TextBlock>
                            <StackPanel>
                                <ComboBox
                                    ItemsSource="{Binding AllDevices, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedItem="{Binding SelectDevice, UpdateSourceTrigger=PropertyChanged}"
                                    SelectedIndex="{Binding SelectIndexDevice}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <TextBlock Grid.ColumnSpan="2" Text="{Binding IsDeviceType}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>

