<Window x:Class="StandETT.ActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StandETT"
        mc:Ignorable="d"
        Title="{Binding CaptionAction}" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Grid>
       <StackPanel>
           <TextBlock Text="{Binding TextCurrentTest}"></TextBlock>
           <TextBlock Text="{Binding ErrorOutput}"></TextBlock>
           <ProgressBar Grid.Column="0" Value="{Binding PercentCurrentTest, Mode=OneWay}" Maximum="100"
                        MinWidth="150"
                        MinHeight="20" Width="165" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding ProgressColor}" />
       </StackPanel>
    </Grid>
</Window>
